<div class="navbar"></div>
<div class="container">

  <h1>Welcome to your lists of movies </h1>
  <ul class="list-group mb-3">
    <% @lists.each do |list| %>
      <li class="list-group-item">
        <%= link_to list.name, list_path(list) %>
      </li>
    <% end %>
  </ul>
  <br>
  <br>
  <%= link_to "Add a list", new_list_path, class: "btn btn-success" %>
</div>
